<h2>・この売上情報を編集する</h2>
<%= form_with(model: [@client, @sale]) do |f| %>
  <div class="row">
    <div class="col-md-3">
      <%= f.label :date, '日付', class: 'col-form-label' %>
      <%= f.date_select :date, class: 'form-control' %>
      
      <%= f.label :item, '購入したアイテム', class: 'col-form-label' %>
      <%= f.text_field :item, class: 'form-control' %>
      
      <%= f.label :item_quantity, '個数', class: 'col-form-label' %>
      <%= f.number_field :item_quantity, class: 'form-control' %>
    </div>
  </div>
  
  <%= f.submit '編集する', class: 'mt-3 btn btn-primary' %>
<% end %>
<h2 class="mt-5">・この顧客を削除する</h2>
<%= link_to "削除する", [@client, @sale], method: :delete, data: { confirm: "本当に削除してもよろしいですか？" }, class: 'btn btn-danger' %>